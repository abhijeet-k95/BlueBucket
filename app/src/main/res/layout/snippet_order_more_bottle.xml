<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/order_more_drink_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DSP BLACK"/>
        <TextView
            android:id="@+id/order_more_drink_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VODKA"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remains  : "/>
            <TextView
                android:id="@+id/order_more_remain_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85.75 %"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/order_more_total_qauntity_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="15.45 %"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/order_more_img_rmv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_remove_outline"
                    android:gravity="center"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/order_more_total_quant_ml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30ml"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/order_more_img_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_outline"
                    android:gravity="center"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>