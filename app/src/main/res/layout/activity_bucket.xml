<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bucket.BucketActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/bucket_top_bar"
                android:background="@drawable/white_gray_bottom_border_home_top_bar">


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bucket_middle_screen"
                android:layout_below="@id/bucket_top_bar"
                android:layout_above="@id/bucket_bottle_nav">

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/recycler_bucket_bottles">



                </android.support.v7.widget.RecyclerView>



            </RelativeLayout>



                <include
                    android:id="@+id/bucket_bottle_nav"
                    layout="@layout/layout_bottom_nav"/>


        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>